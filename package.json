{
  "name": "cryptopay",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "dev:web": "turbo run dev --filter=@cryptopay/web",
    "dev:server": "turbo run dev --filter=@cryptopay/server",
    "dev:facilitator": "turbo run dev --filter=@cryptopay/facilitator",
    "stop": "pkill -f 'tsx watch' 2>/dev/null; pkill -f 'vite' 2>/dev/null; lsof -ti:3000,3001,3003 | xargs kill -9 2>/dev/null; echo 'All services stopped'",
    "restart": "pnpm stop && sleep 1 && pnpm dev",
    "status": "scripts/status.sh"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.0"
}
